{
  "name": "sistema-vinetas",
  "version": "1.0.0",
  "description": "Sistema CRUD para generar vi침etas con c칩digo de barras",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "postinstall": "electron-builder install-app-deps"
  },
  "keywords": [
    "electron",
    "sqlite",
    "tailwind",
    "jspdf",
    "barcode"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "autoprefixer": "^10.4.14",
    "electron": "^35.1.4",
    "electron-builder": "^24.6.3",
    "electron-rebuild": "^3.2.9",
    "postcss": "^8.4.27",
    "tailwindcss": "^3.3.3"
  },
  "dependencies": {
    "better-sqlite3": "^9.5.0",
    "electron-serve": "^1.1.0",
    "jsbarcode": "^3.11.5",
    "jspdf": "^2.5.1"
  },
  "build": {
    "appId": "com.tuempresa.sistema-vinetas",
    "productName": "Sistema de Vi침etas",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!**/node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme}",
      "!**/node_modules/*/{test,__tests__,tests,powered-test,example,examples}",
      "!**/node_modules/*.d.ts",
      "!**/node_modules/.bin",
      "!dist/**/*",
      "!*.{iml,o,hprof,orig,pyc,pyo,rbc,swp,csproj,sln,xproj}",
      "!.editorconfig",
      "!**/._*",
      "!**/{.DS_Store,.git,.gitignore,.gitattributes}",
      "!**/{.eslintignore,.eslintrc.js,.prettierignore,.prettierrc}"
    ],
    "extraResources": [
      {
        "from": "productos.sqlite",
        "to": "productos.sqlite"
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        },
        {
          "target": "portable",
          "arch": ["x64"]
        }
      ],
      "icon": "assets/icon.ico",
      "artifactName": "${productName}-Windows-${version}-Setup.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Sistema de Vi침etas",
      "deleteAppDataOnUninstall": false,
      "displayLanguageSelector": true,
      "installerLanguages": ["es-ES"],
      "installerIcon": "assets/icon.ico",
      "uninstallerIcon": "assets/icon.ico"
    },
    "portable": {
      "artifactName": "${productName}-Windows-${version}-Portable.${ext}"
    },
    "mac": {
      "target": ["dmg"],
      "hardenedRuntime": false
    }
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "core-js",
      "electron",
      "better-sqlite3"
    ]
  }
}